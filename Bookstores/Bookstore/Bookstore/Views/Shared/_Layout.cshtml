<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="~/javaScript/dashboard-chart.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <link href="~/css/admin-style.css" rel="stylesheet" />
    <title>Document</title>
</head>
<body>
    <div class="admin">
        <div class="ad-sidebar text-white fixed-top"
             style="width: 260px; height: 100vh; background-color: #bde0fe">
            <img src="/images/logo_bookstore1.png" class="img-fluid p-3" alt="" />
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
                <li>
                    <a href="/Admin/Login/Dashboard" class="nav-link">
                        <i class="bi fas fa-columns"></i>
                        Bảng điều khiển
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Books")" class="nav-link">
                        <i class="bi fas fa-book"></i>
                        Sách
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Users")" class="nav-link">
                        <i class="bi fas fa-users"></i>
                        Khách hàng
                    </a>
                </li>
                <li>
                    <a href="/Admin/OrderManager/Index" class="nav-link">
                        <i class="bi fas fa-clipboard-list"></i>
                        Đơn hàng
                    </a>
                </li>
            </ul>
        </div>
        <div class="placehoder d-flex flex-column flex-shrink-0 p-3"
             style="width: 260px"></div>

        <div class="ad-content" style="background-color: #f9fcfd">
            <div class="ad-header d-flex justify-content-between align-items-center prl-30">
                <h2 class="ml-16">Dashboard</h2>
                <div class="d-flex align-items-center">
                    <i class="fas fa-bell font-size-icon24"></i>
                    <img src="/images/images.jpg" class="rounded-pill img-size40 mrl-16" alt="">
                    

                </div>
            </div>

            <div class="ad-book m-5 bg-white">
                <div class="d-flex justify-content-between p-2">
                    <h2 class="text-black p-">Quản Lý</h2>
                </div>
                <hr />

               
                    @RenderBody()
                    
                    <footer>
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </footer>
                

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
            </div>
        </div>
</body>
</html>
