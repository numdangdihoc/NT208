        <form class="search-form" id="searchForm">
    <input class="form-control search-text"
           type="text"
           placeholder="Tìm kiếm sản phẩm..."
           name="searchString" />
    <button type="button" id="searchButton" class="search-button">
        <i class="fas fa-search font-size-icon"></i>
    </button>
</form>
<div id="searchResults"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#searchButton').click(function () {
            var searchString = $('.search-text').val();

            $.ajax({
                url: '@Url.Action("SearchByName", "Home")',
                type: 'GET',
                data: { name: searchString },
                success: function (result) {
                    $('#searchResults').html(result);
                },
                error: function () {
                    console.log("Có lỗi xảy ra khi tìm kiếm.");
                }
            });
        });
    });
</script>

