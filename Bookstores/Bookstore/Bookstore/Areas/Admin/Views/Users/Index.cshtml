@model IEnumerable<Bookstore.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-3">
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create New</button>
</div>
<table class="table">
    <tr>
        <th>
            Full Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Name
        </th>
        <th>
            Password
        </th>
        <th>
            Avatar
        </th>
        <th>
            Birthday
        </th>
        <th>
            Gender
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.user_fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_avatar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user_gender)
        </td>
        <td>
            <button onclick="location.href='@Url.Action("Edit", new { id = item.user_id })'" class="btn btn-primary">Edit</button> |
            <button onclick="location.href='@Url.Action("Details", new { id = item.user_id })'" class="btn btn-info">Details</button> |
            <button onclick="location.href='@Url.Action("Delete", new { id = item.user_id })'" class="btn btn-danger">Delete</button>
        </td>
    </tr>
}

</table>
